# ============================================================================
# Paramount Media Operations MCP Server - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# All secrets should be kept secure and never committed to version control
# ============================================================================

# ==========================================================================
# ENVIRONMENT SETTINGS
# ==========================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Mock Mode: When true, uses generated data instead of real API calls
MOCK_MODE=true

# ==========================================================================
# SERVER CONFIGURATION
# ==========================================================================
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_SERVER_NAME=paramount-media-ops-mcp

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================================================
# JIRA CONFIGURATION
# ==========================================================================
JIRA_ENABLED=true
JIRA_API_URL=https://paramount.atlassian.net
JIRA_API_EMAIL=your-email@paramount.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=PROD
JIRA_CONTENT_PROJECT_KEY=CONTENT

# ==========================================================================
# CONVIVA CONFIGURATION
# ==========================================================================
CONVIVA_ENABLED=true
CONVIVA_API_URL=https://api.conviva.com/insights/2.4
CONVIVA_CUSTOMER_KEY=your-conviva-customer-key
CONVIVA_API_KEY=your-conviva-api-key
CONVIVA_FILTER_CLIENT=paramount-plus

# ==========================================================================
# NEWRELIC CONFIGURATION
# ==========================================================================
NEWRELIC_ENABLED=true
NEWRELIC_API_URL=https://api.newrelic.com/graphql
NEWRELIC_INSIGHTS_API_URL=https://insights-api.newrelic.com/v1
NEWRELIC_API_KEY=your-newrelic-api-key
NEWRELIC_ACCOUNT_ID=your-account-id
NEWRELIC_APP_NAME=paramount-plus-streaming

# ==========================================================================
# ANALYTICS CONFIGURATION
# ==========================================================================
ANALYTICS_API_URL=https://analytics.paramount.com/api/v2
ANALYTICS_API_KEY=your-analytics-api-key

# ==========================================================================
# LLM CONFIGURATION
# ==========================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
